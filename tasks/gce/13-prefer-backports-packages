#!/bin/bash
# Prefer backports kernel

if $use_backports_packages; then
echo 'using backports'
mkdir -p $imagedir/etc/apt/preferences.d
cat >> $imagedir/etc/apt/preferences.d/backports.pref <<EOF
Package: linux-image-* initramfs-tools init-system-helpers openssh-sftp-server openssh-client openssh-server
Pin: release n=wheezy-backports
Pin-Priority: 500
EOF
fi
